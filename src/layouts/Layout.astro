---
import astroConfig from "../../astro.config.mjs";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="High performance SVG tile maker. (obviously false it's JavaScript bro)"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`/${astroConfig.base || ""}/favicon.svg`}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
  <style>
    body {
      all: unset;
    }
  </style>
</html>
